{
  "compilerOptions": {
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.node.tsbuildinfo",
    "target": "ES2023",
    "lib": ["ES2023"],
    "module": "ESNext",
    "types": ["node"],
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "verbatimModuleSyntax": true,
    "moduleDetection": "force",
    "noEmit": true,

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "erasableSyntaxOnly": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedSideEffectImports": true,

    // (Optional) Embeds the source map directly within the .js file as a base64 string,
    // instead of creating a separate .map file.
    // Mutually exclusive with "sourceMap": true. Choose one or the other.
    "inlineSourceMap": true,

    // Specifies the root directory for source files, used by debuggers to locate them.
    // Useful if sources are located at a different path at runtime than at design-time.
    "sourceRoot": "./src"
  },
  "include": ["vite.config.ts"]
}
